{
  "name": "openpen",
  "version": "0.0.1",
  "preferGlobal": true,
  "description": "The Open PEN project is a NodeJS server application that allows you to create a complete, wireframe, prototype and web application based upon writing user stories.",
  "main": "./bin/www",
  "engines": {
    "node": ">=0.9.9"
  },
  "engine-strict": true,
  "bin": {
    "openpen": "./bin/openpen"
  },
  "scripts": {
    "test": "npm-run-all tsc:test ng:test",
    "build": "npm-run-all ng:build tsc:build",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "ng": "ng",
    "tsc:test": "mocha -r ts-node/register src/runtime/test/**/*.spec.ts",
    "ng:test": "cd ./src/frontoffice/app/ && ng test && cd ../../../",
    "ng:e2e": "cd ./src/frontoffice/app/ && ng e2e && cd ../../../",
    "tsc:build": "tsc",
    "ng:build": "cd ./src/frontoffice/app/ && ng build && cd ../../../",
    "serve": "node ./dist/runtime/src/server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richardedens/openpen.git"
  },
  "bugs": {
    "url": "https://github.com/richardedens/openpen/issues"
  },
  "keywords": [
    "openpen",
    "process automation",
    "mendix",
    "mendixmodelsdk"
  ],
  "author": "Gerhard Richard Edens",
  "license": "MIT",
  "homepage": "https://www.ultronicprocess.com/",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3000
    }
  },
  "dependencies": {
    "@angular/animations": "^7.2.15",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@microsoft/office-js": "^1.1.13",
    "async": "^2.6.4",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.4",
    "chalk": "^2.4.2",
    "chart.js": "^2.8.0",
    "class-validator": "^0.9.1",
    "clear": "^0.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.3",
    "core-js": "^2.5.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "express": "~4.16.0",
    "express-jwt": "^5.3.1",
    "figlet": "^1.2.1",
    "helmet": "^3.16.0",
    "http-errors": "~1.6.2",
    "https": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mendixmodelsdk": "^4.19.0",
    "mendixplatformsdk": "^4.1.0",
    "monaco-editor": "^0.16.2",
    "mongodb": "^3.2.3",
    "morgan": "~1.9.0",
    "mysql": "^2.17.1",
    "node-sass-middleware": "0.11.0",
    "npm-run-all": "^4.1.5",
    "officegen": "^0.6.0",
    "prompt": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~6.3.3",
    "sqlite3": "^4.0.6",
    "tempfile": "^3.0.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslib": "^1.9.0",
    "twig": "^1.13.2",
    "typeorm": "^0.2.16",
    "when": "^3.7.8",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.9",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/helmet": "0.0.43",
    "@types/http-errors": "^1.6.1",
    "@types/jasmine": "^3.3.12",
    "@types/jasminewd2": "~2.0.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mendixmodelsdk": "^0.8.1",
    "@types/mocha": "^5.2.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.5",
    "@types/node-sass-middleware": "0.0.31",
    "@types/office-js": "^1.0.3",
    "@types/protractor": "^4.0.0",
    "chai": "^4.2.0",
    "codelyzer": "~4.5.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mocha": "^6.1.4",
    "protractor": "~5.4.0",
    "ts-node": "^8.1.0",
    "tslint": "~5.11.0",
    "typescript": "^3.2.4"
  }
}
